<Window x:Class="StreamNode.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" TextElement.Foreground="{DynamicResource MaterialDesignBody}" TextElement.FontWeight="Regular" TextElement.FontSize="13" TextOptions.TextFormattingMode="Ideal" TextOptions.TextRenderingMode="Auto" Background="{DynamicResource MaterialDesignPaper}" FontFamily="{DynamicResource MaterialDesignFont}"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:StreamNode" mc:Ignorable="d" Title="MainWindow" ResizeMode="CanMinimize" Width="700" Height="400">

    <Grid>

        <dragablz:TabablzControl FixedHeaderCount="3">
            <TabItem Header="Server">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <materialDesign:Card Padding="32" Margin="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="1" Width="500">
                                <Image.Source>
                                    <BitmapImage DecodePixelWidth="200" UriSource="pack://application:,,,/Resources/logo.png" />
                                </Image.Source>
                            </Image>
                            <TextBlock Grid.ColumnSpan="3" Grid.Row="1" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Server Status" HorizontalAlignment="Center"/>
                            <Viewbox Grid.Column="1" Grid.Row="2" Margin="20">
                                <ToggleButton Checked="StartServer" Unchecked="StopServer" Style="{StaticResource MaterialDesignSwitchDarkToggleButton}" ToolTip="MaterialDesignSwitchDarkToggleButton" IsChecked="True" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Viewbox>
                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Click="QRCodeShow" Margin="0,0,4,0" Width="100">QRCode</Button>
                                <Button Click="OpenApp" Margin="4,0,0,0" Width="100">Open</Button>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:DialogHost DialogTheme="Inherit" IsOpen="False" x:Name="QRCodeDialog" CloseOnClickAway="True">
                        <materialDesign:DialogHost.DialogContent>
                            <StackPanel Margin="10">
                                <TextBlock Text="QRCode" HorizontalAlignment="Center"/>
                                <StackPanel Margin="16" x:Name="QRCodePanel" Width="150" Height="150">
                                </StackPanel>
                                <TextBox Background="Transparent" BorderThickness="0" IsReadOnly="True" TextWrapping="Wrap" HorizontalAlignment="Center" Text="{Binding UrlQRCode, Mode = OneWay}"/>
                            </StackPanel>
                        </materialDesign:DialogHost.DialogContent>
                    </materialDesign:DialogHost>
                </Grid>
            </TabItem>
            <TabItem Header="Settings" Name="SettingsTab">
                <Grid>
                    <materialDesign:Card Padding="32" Margin="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="6*"/>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="OBS Configuration" />

                            <TextBox Grid.Row="1" Grid.Column="0" Margin="2,32,2,2" materialDesign:HintAssist.Hint="OBS IP" materialDesign:HintAssist.HelperText="Insert OBS ip" Name="ip" Text="{Binding ObsIp, Mode = TwoWay}"/>

                            <TextBox Grid.Row="1" Grid.Column="1" Margin="2,32,2,2" materialDesign:HintAssist.Hint="OBS Port" materialDesign:HintAssist.HelperText="Insert OBS port" Name="port" Text="{Binding ObsPort, Mode = TwoWay}"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" materialDesign:HintAssist.Hint="OBS Password" materialDesign:HintAssist.HelperText="Insert OBS password (empty if none)" Name="pwd" Text="{Binding ObsPassword, Mode = TwoWay}"/>

                            <Viewbox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                                <Button Click="SaveSettings" Width="100">Save</Button>
                            </Viewbox>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
        </dragablz:TabablzControl>
        <materialDesign:Snackbar x:Name="SaveResult" MessageQueue="{materialDesign:MessageQueue}"/>
        <materialDesign:Snackbar x:Name="WarningResult" MessageQueue="{materialDesign:MessageQueue}"/>
        <materialDesign:Snackbar x:Name="ErrorResult" MessageQueue="{materialDesign:MessageQueue}"/>
        <materialDesign:DialogHost DialogTheme="Inherit" IsOpen="False" x:Name="InstallOBSPluginPopup" CloseOnClickAway="True">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="10">
                    <TextBlock Text="OBS-Websocket Plugin is not installed, do you want to install?" HorizontalAlignment="Center" Margin="5"/>
                    <TextBlock Text="Plugin is required to control OBS Scenes" HorizontalAlignment="Center" Margin="5,5,5,20"/>
                    <CheckBox x:Name="SkipOBSPopupAlways" Margin="5">Don't ask me again</CheckBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Button Click="InstallOBSPluginClick">Install</Button>
                        <Button Click="CancelOBSPluginClick">Cancel</Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
        <materialDesign:DialogHost DialogTheme="Inherit" IsOpen="False" x:Name="InstallOBSPluginLoading" CloseOnClickAway="False">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="10">
                    <ProgressBar x:Name="ProgressOBSPlugin" IsIndeterminate="True"/>
                    <TextBlock x:Name="TextBlockOBSPluginLoading" Text="Loading..." HorizontalAlignment="Center" Margin="5"/>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</Window>
